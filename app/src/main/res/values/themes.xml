<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.JetPackPracticeKit" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_android_black</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.JetPackPracticeKit</item>
    </style>
</resources>